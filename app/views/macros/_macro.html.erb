<li class="stage-bar bar list-unstyled clearfix">
  <span><%= macro.name %></span>

  <div class="btn-group pull-right">
    <% if can? :update, macro %>
      <%= link_to "Edit", edit_project_macro_path(@project, macro), class: "btn btn-default" %>
    <% end %>

    <%= link_to 'Execute', execute_project_macro_path(@project, macro), method: :post, class: 'btn btn-primary', data: { confirm: "Are you sure you would like to execute '#{macro.name}'?" } %>
  </div>
</li>
