<h1>CSV Report status</h1>

<section class="clearfix">
  <div>
    <% if @csv_export.nil? or @csv_export.deleted? %>
      <p>Your report has been deleted.  <%= link_to "Request a new report.", {action: "new"} %></p>
    <% elsif @csv_export.downloaded? or @csv_export.finished? %>
      <p><%= link_to "Your report is ready for download.", csv_download_path, id: params[:id] %></p>
    <% elsif @csv_export.failed? %>
      <p>Your report has failed.  <%= link_to "Request a new report.", {action: "new"} %></p>
    <% else %>
      <p >Your report is being prepared.  You will receive an email when your report is ready for download or you can refresh this page.</p>
      <p>If you do not receive an email in a couple of hours, please try again.</p>
    <% end %>
  </div>
</section>
