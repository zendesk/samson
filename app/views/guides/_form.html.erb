<%= form_for guide, url: project_guide_path(project), html: { class: "form-horizontal" } do |form| %>
  <h1>Guide for deploying <%= project.name %></h1>
  <fieldset>
    <div class="form-group">
      <div class="col-lg-12">
        <%= form.text_area :body, class: "form-control" %>
        <p class="help-block">Markdown Supported</p>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-8 col-lg-4 text-right">
        <%= link_to "Discard Changes", project_guide_path(project), class: "btn btn-default" %>
        <button type="submit" class="btn btn-primary">Save Page</button>
      </div>
    </div>
  </fieldset>
<% end %>
