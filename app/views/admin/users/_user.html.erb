<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td class="role" data-user-id="<%= user.id %>">
    <div class="relative-wrapper">
      <%= render partial: "roles", locals: { user: user } %>
    </div>
  </td>
  <td>
    <%= link_to "Delete", [:admin, user], method: :delete, data: { confirm: "Delete ##{user.id} #{user.name} #{user.email} ?" }, class: "btn-sm btn-danger" if can? :destroy, user %>
  </td>
</tr>
