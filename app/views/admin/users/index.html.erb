<h1>Users</h1>

<section class="clearfix">

  <%= render partial: "shared/search_bar", locals: { url: admin_users_path, query: params[:search] } %>
  <div class="users-csv">
    <%= link_to "Download as CSV", admin_users_path(format: "csv") %>
  </div>

  <table class="table table-hover table-condensed">
    <thead>
      <tr>
        <th><%= sortable "id" %></th>
        <th><%= sortable "name" %></th>
        <th><%= sortable "email" %></th>
        <th><%= sortable "role_id", "System Level Role" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
    <% if @users.empty? %>
      <tr>
        <td>No user was found!</td>
      </tr>
    <% else %>
        <%= render @users %>
    <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

</section>
