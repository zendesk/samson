<% if can? :update, user %>

  <% Role.all.each do |role| %>
    <label class="radio-inline" ng-click="updateUser($event)">
      <%= radio_button_tag "users[#{user.id}][role]", role.id, user.role_id == role.id %>
      <%= role.name %>
    </label>
  <% end %>

<% else %>
  <%= Role.find(user.role_id).name.capitalize %>
<% end %>
