<%= form_for [@project, @role], html: { class: "form-horizontal" } do |form| %>
  <%= render 'shared/errors', object: @role %>

  <fieldset>
    <div class="form-group">
      <%= form.label :name, 'Name', class: "col-lg-2 control-label" %>
      <div class="col-lg-2">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :config_file, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.text_field :config_file, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :service_name, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.text_field :service_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :deploy_strategy, class: "col-lg-2 control-label" %>
      <div class="col-lg-4">
        <%= form.select :deploy_strategy, Kubernetes::Role::DEPLOY_STRATEGIES, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <% if current_user.admin_for?(@project) %>
          <%= form.submit @role.persisted? ? 'Save' : 'Create', class: "btn btn-primary" %>
          <%= link_to_delete [@project, @role], 'Delete', class: 'btn btn-default' if @role.persisted? %>
        <% end %>
        <%= link_to "Cancel", :back, class: 'btn btn-default' %>
      </div>
    </div>
  </fieldset>
<% end %>
