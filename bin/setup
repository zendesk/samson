#!/bin/sh

set -e

heading() {
  echo "$1... \c";
}

bold() {
  echo "\033[1m$1\033[0m"
}

pass() {
  bold "DONE"
}

fail() {
  bold "FAIL"
  echo
}

fail_and_exit() {
  fail
  exit 1
}

install_gem() {
  if ! gem list $1 -i > /dev/null
  then
    echo gem install $1
    gem install $1
  fi
}

try() {
  heading "$1"
  if eval "$2"
  then
    pass
  else
    fail_and_exit
  fi
}

# do not force users to install all databses, but at least one
without="nothing"
which mysql >/dev/null || without="$without mysql"
which postgres >/dev/null || without="$without postgres"
which sqlite3 >/dev/null || without="$without sqlite"
if [[ $without = "nothing mysql postgres sqlite" ]]; then
  echo "Need mysql, sqlite, or postgresql installed"
  exit 1
fi

try "Installing bundler" "install_gem bundler"
try "Bundling" "bundle check >/dev/null 2>&1 || bundle --quiet --without $without"

echo
bold "Copying example files"
try "Creating .env" "test -e .env || (test -e custom/.env.bootstrap && cp custom/.env.bootstrap .env) || (cp .env.bootstrap .env && ./bin/decode_dot_env .env)"
try "Creating config/database.yml" "test -e config/database.yml || (test -e custom/database.yml && cp custom/database.yml config/database.yml) || cp config/database.mysql.yml.example config/database.yml"
try "Creating databases" "(test -e custom/seeds.rb && cp -f custom/seeds.rb db/seeds.rb) && false || (echo 'no pass' | bundle exec rake db:setup)"

echo
bold "Success!"
